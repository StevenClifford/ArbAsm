
set endian, 1
cmp loop, 0
	Ce set loop, 1
	Ce set gr1, time
	Ce set gr4, 0
	Cg set flag, 2
	Ce cmp stacsz, mstptr
		Cg pop gr3
		Ce sprint "How long?(seconds)\n> "
		Ce input gr3
		Ce set gr1, time

set gr2, time
sub gr2, gr1

cmp gr2, gr4
	Cg print gr2
;	Cg sprint "\a"
set gr4, gr2

cmp gr2, gr3
	Ce set flag, 1
	Cg set loop, 0
	Cg print "Time's up!"
